{
	"name": "Bauhaus",
	"version": "2.0.0",
	"description": "Web application for the management of concepts, classifications and other statistical objects",
	"repository": {
		"type": "git",
		"url": "https://github.com/InseeFr/Bauhaus"
	},
	"license": "MIT",
	"author": "INSEE (http://www.insee.fr)",
	"scripts": {
		"build": "npm-run-all build-css build-js",
		"build-css": "node-sass-chokidar src/ -o src/",
		"build-insee": "npm-run-all build-css build-insee-js",
		"build-insee-js": "cross-env NODE_PATH=src/ REACT_APP_VERSION=$npm_package_version REACT_APP_NAME=$npm_package_name REACT_APP_INSEE=true react-scripts build",
		"build-js": "cross-env NODE_PATH=src/ REACT_APP_VERSION=$npm_package_version REACT_APP_NAME=$npm_package_name react-scripts build",
		"build-storybook": "npm-run-all build-css build-storybook-js",
		"build-storybook-js": "cross-env NODE_PATH=src/ build-storybook -o built-storybook/storybook",
		"cypress:open": "cypress open",
		"cypress:run": "cypress run",
		"e2e": "start-server-and-test start http://localhost:3000 cypress:run",
		"eject": "react-scripts eject",
		"lint": "eslint src",
		"start": "npm-run-all -p watch-css start-js",
		"start-https": "npm-run-all -p watch-css start-https-js",
		"start-https-js": "cross-env NODE_PATH=src/ HTTPS=true REACT_APP_VERSION=$npm_package_version REACT_APP_NAME=$npm_package_name react-scripts start",
		"start-js": "cross-env NODE_PATH=src/ REACT_APP_VERSION=$npm_package_version REACT_APP_NAME=$npm_package_name react-scripts start",
		"start-storybook": "npm-run-all -p watch-css start-storybook-js",
		"start-storybook-js": "cross-env NODE_PATH=src/ start-storybook -p 9999",
		"test": "npm-run-all -p watch-css test-css",
		"test-css": "cross-env NODE_PATH=src/  react-scripts test --env=jsdom",
		"test:coverage": "npm-run-all -p build-css test:coverage-css",
		"test:coverage-css": "cross-env NODE_PATH=src/  react-scripts test --env=jsdom --coverage -i",
		"watch-css": "node-sass-chokidar src/ -o src/ --watch --recursive"
	},
	"husky": {
		"hooks": {
			"pre-commit": "run-s lint test:coverage"
		}
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "es5",
		"useTabs": true
	},
	"dependencies": {
		"babel-polyfill": "^6.23.0",
		"bootstrap": "3.3.7",
		"create-react-class": "^15.6.2",
		"dompurify": "^0.8.7",
		"draft-js": "^0.10.4",
		"draft-js-export-html": "^1.2.0",
		"draft-js-import-html": "^1.2.1",
		"draftjs-md-converter": "^1.1.1",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"file-saver": "^1.3.3",
		"jwt-decode": "^2.2.0",
		"keycloak": "^1.2.0",
		"lodash.deburr": "^4.1.0",
		"lodash.difference": "^4.5.0",
		"moment": "^2.18.1",
		"moment-range": "^3.0.3",
		"prop-types": "^15.5.10",
		"react": "16.2.0",
		"react-16-bootstrap-date-picker": "^5.1.1",
		"react-bootstrap": "^0.31.5",
		"react-bootstrap-table": "^4.3.0",
		"react-bootstrap-tabs": "^1.0.2",
		"react-d3-tree": "^1.10.3",
		"react-dom": "16.2.0",
		"react-draft-wysiwyg": "^1.12.0",
		"react-loading": "2.0.3",
		"react-modal": "^3.1.8",
		"react-redux": "^5.0.2",
		"react-router-dom": "^4.1.1",
		"react-router-hash-link": "^1.2.0",
		"react-scripts": "^1.1.1",
		"react-select": "^1.1.0",
		"react-sortable-tree": "^2.1.0",
		"react-test-renderer": "16.4.2",
		"recompose": "0.30.0",
		"redux": "^3.6.0",
		"redux-logger": "^2.8.1",
		"redux-thunk": "^2.2.0"
	},
	"devDependencies": {
		"@storybook/addon-knobs": "^3.3.15",
		"@storybook/react": "^3.3.15",
		"babel-eslint": "^7.2.3",
		"concurrently": "^3.5.1",
		"coveralls": "^3.0.0",
		"cross-env": "^5.0.1",
		"cypress": "3.1.3",
		"eslint": "^4.1.1",
		"eslint-config-prettier": "3.1.0",
		"eslint-config-react-app": "2.1.0",
		"eslint-plugin-flowtype": "3.0.0",
		"eslint-plugin-import": "2.14.0",
		"eslint-plugin-jsx-a11y": "6.1.2",
		"eslint-plugin-react": "7.11.1",
		"husky": "1.1.2",
		"jest-localstorage-mock": "2.3.0",
		"node-sass-chokidar": "^1.3.0",
		"npm-run-all": "^4.1.3",
		"prettier": "1.14.2",
		"start-server-and-test": "1.7.11"
	},
	"contributor": [
		{
			"name": "Nicolas Laval",
			"email": "nicolas.laval@insee.fr"
		}
	]
}
